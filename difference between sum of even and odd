#include <stdio.h>
int main() {
    int a,i,oddsum = 0,evensum = 0;
    printf("Enter the value of n: ");
    scanf("%d", &a);
    for (i = 1; i <= a; i++) {
        if (i % 2 == 0) {
            evensum += i;
        } else {
            oddsum += i;
        }
    }
    printf("Sum of even numbers: %d\n", evensum);
    printf("Sum of odd numbers: %d\n", oddsum);
    printf("Difference: %d\n", oddsum - evensum);
    return 0;
}
